<Window x:Class="DnP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DnP"
        mc:Ignorable="d"
        Title="DungeonsAndPlants" Height="720" Width="1280" Foreground="White" SizeChanged="Window_SizeChanged" MinWidth="720" MinHeight="500" Icon="Source/Images/generation.png">
    <Window.CommandBindings>
        <CommandBinding Command="{x:Static local:MyCommand.MyCustomCommand}" Executed="CommandBinding_Executed"/>
    </Window.CommandBindings>
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Window.Background>
        <DynamicResource ResourceKey="MainBackground"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.1*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.1*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.ColumnSpan="3" Fill="{DynamicResource Navbar}" Height="70" VerticalAlignment="Top"/>
        <Grid Panel.ZIndex="1" Grid.Row="0" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Column="0" x:Name="Logo">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" Source="Source/Images/logo.png"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" x:Name="StP">
                    <local:DirectTextBlock Grid.Column="1" VerticalAlignment="Center" FontFamily="Algerian" FontSize="24" Foreground="#AD7E36">Dungeons</local:DirectTextBlock>
                    <Image Grid.Column="2" Source="Source/Images/Spooder.png" Height="52" VerticalAlignment="Bottom" Margin="-3 0 -1 0"/>
                    <local:MyTextBlock MyText="PLANTS" VerticalAlignment="Center" Grid.Column="3" FontSize="24" Foreground="#36B921" FontFamily="Curlz MT" FontWeight="Bold" Text="{Binding Path=MyText, RelativeSource={RelativeSource Self}}" MouseDown="MyTextBlock_MouseDown" CustomMouseClick="MyTextBlock_CustomMouseClick"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Visibility="Collapsed">
                    <TextBlock Grid.Column="1" VerticalAlignment="Center" FontFamily="Algerian" FontSize="35" Margin="0 5 0 0"  Foreground="#AD7E36">D</TextBlock>
                    <TextBlock Grid.Column="2" FontSize="24" Foreground="#FF7A8145" FontFamily="Algerian" Margin="1 25 -3 0">&amp;</TextBlock>
                    <TextBlock VerticalAlignment="Center" Grid.Column="3" FontSize="35" Foreground="#36B921" FontFamily="Curlz MT" FontWeight="Bold">P</TextBlock>
                </StackPanel>
            </Grid>
            <Button Grid.Column="1" Width="40" Margin="20 0" Height="40" Background="Transparent" BorderThickness="0" Command="{x:Static local:MyCommand.MyCustomCommand}">
                <Image Source="Source/Images/Menu.png"/>
            </Button>
            <Border x:Name="Menu"  Visibility="Collapsed" CornerRadius="10" Panel.ZIndex="2" Grid.Column="1" Grid.Row="1" Height="200" Width="200" Margin="-150 0 -150 -200" Padding="10 0" Style="{DynamicResource MenuTheme}">
                <Grid>
                    <Grid.Resources>
                        <Style TargetType="Rectangle">
                            <Setter Property="Height" Value="2"/>
                            <Setter Property="Fill" Value="#777777"/>
                            <Setter Property="Grid.ColumnSpan" Value="2"/>
                            <Setter Property="Grid.Row" Value="1"/>
                        </Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontSize" Value="20"/>
                            <Setter Property="TextAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Cursor" Value="Hand"/>
                        </Style>
                    </Grid.Resources>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Border MouseDown="ChangeLanguage">
                        <TextBlock Text="{Binding Source={StaticResource DictionaryInstance}, Path=[ChangeLanguage].Selected}"/>
                    </Border>
                    <Rectangle Grid.Row="1"/>
                    <Border MouseDown="ChangeTheme" Grid.Row="2">
                        <TextBlock Text="{Binding Source={StaticResource DictionaryInstance}, Path=[ChangeTheme].Selected}"/>
                    </Border>
                    <Rectangle Grid.Row="3"/>

                </Grid>
            </Border>
            <Border Grid.Column="2" Background="{DynamicResource Searchbar}" CornerRadius="10" Height="40" MouseDown="SearchFocus">
                <Grid Background="Transparent">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="searchPrompt" Grid.Column="0" Background="Transparent" Foreground="#858EAD" BorderThickness="0" SelectionBrush="Transparent" CaretBrush="White" VerticalAlignment="Center" FontSize="18" Margin="10 0 0 0"
                             PreviewKeyDown="SearchKeyDown" PreviewTextInput="SearchTextEnter" TextChanged="searchPrompt_TextChanged" PreviewMouseDown="SearchClick" Text="{Binding Path=[SearchDefault].Selected, Source={StaticResource DictionaryInstance}, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <Image Source="/Source/Images/Loop.png" Grid.Column="1" Width="16" Margin="10 0" MouseDown="SearchButtonClick"/>
                </Grid>
            </Border>
            <Image Grid.Column="3" Source="/Source/Images/SearchSettings.png" Width="40" Margin="20 0 0 0">
                <Image.Triggers>
                    <EventTrigger RoutedEvent="MouseUp">
                        <EventTrigger.Actions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Width" Duration="0:0:0.1" To="45" AutoReverse="True" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger.Actions>
                    </EventTrigger>
                </Image.Triggers>
            </Image>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="1" x:Name="Body">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock FontSize="28" Margin="0 10" Grid.Row="0" Text="{Binding Source={StaticResource DictionaryInstance}, Path=[PlantGenerate].Selected, Mode=OneWay}"/>
            <!--<Rectangle Height="30" Width="300">
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                        <GradientStop Color="#FF02709D"/>
                        <GradientStop Color="#FF050F6C" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>-->
            <Grid Grid.Row="1" x:Name="PlantGenerateBody" Visibility="Visible">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.8*"/>
                    <ColumnDefinition MinWidth="250"/>
                    <ColumnDefinition Width="1.2*" MinWidth="340"/>
                </Grid.ColumnDefinitions>
                <Border x:Name="BordImageTunnel" BorderBrush="#505F94" BorderThickness="2">
                    <local:MyImage Source="Source/Images/Forest).png" Stretch="UniformToFill"/>
                </Border>
                <Border BorderBrush="#505F94" BorderThickness="2"  Grid.Column="1">
                    <ScrollViewer VerticalScrollBarVisibility="Hidden">
                        <Grid x:Name="GenerationParams">
                            <Grid.Background>
                                <ImageBrush ImageSource="Source/Images/MeAndSomeGuns.png" Stretch="UniformToFill"/>
                            </Grid.Background>
                            <Grid.Resources>
                                <Style TargetType="RowDefinition">
                                    <Setter Property="Height" Value="Auto"/>
                                </Style>
                                <Style TargetType="Grid">
                                    <Setter Property="Grid.Column" Value="1"/>
                                    <Setter Property="Height" Value="Auto"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                </Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Margin" Value="0 25 10 0"/>
                                    <Setter Property="FontSize" Value="20"/>
                                    <Setter Property="VerticalAlignment" Value="Top"/>
                                </Style>
                                <Style TargetType="Rectangle">
                                    <Setter Property="Height" Value="2"/>
                                    <Setter Property="Fill" Value="#777777"/>
                                    <Setter Property="Grid.ColumnSpan" Value="2"/>
                                    <Setter Property="Grid.Row" Value="1"/>
                                    <Setter Property="Margin" Value="0 10 0 0"/>
                                </Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Margin" Value="0 25 0 0"/>
                                    <Setter Property="Grid.ColumnSpan" Value="2"/>
                                    <Setter Property="Height" Value="Auto"/>
                                    <Setter Property="VerticalAlignment" Value="Bottom"/>
                                    <Setter Property="FontSize" Value="20"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="CaretBrush" Value="White"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <EventSetter Event="LostFocus" Handler="TextBoxLostFocus"/>
                                    <EventSetter Event="TextChanged" Handler="GnerationTextToWhite"/>
                                </Style>
                                <Style TargetType="local:MyTextBox">
                                    <Setter Property="Margin" Value="0 25 0 0"/>
                                    <Setter Property="Grid.ColumnSpan" Value="2"/>
                                    <Setter Property="Height" Value="Auto"/>
                                    <Setter Property="VerticalAlignment" Value="Bottom"/>
                                    <Setter Property="FontSize" Value="20"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="CaretBrush" Value="White"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <EventSetter Event="LostFocus" Handler="TextBoxLostFocus"/>
                                    <EventSetter Event="TextChanged" Handler="GnerationTextToWhite"/>
                                </Style>
                                <Style TargetType="ComboBox">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontSize" Value="18"/>
                                    <!--<Setter Property="FontWeight" Value="Bold"/>-->
                                </Style>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                                <GradientStop Color="#FF400372"/>
                                                <GradientStop Color="#FF000383" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="FontSize" Value="15"/>
                                    <Setter Property="BorderBrush" Value="#777777"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                </Style>
                            </Grid.Resources>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="20"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Border Grid.Column="1" CornerRadius="10" Margin="10" Cursor="Hand" Padding="10">
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                        <GradientStop Color="#FF400372"/>
                                        <GradientStop Color="#FF000383" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock MouseDown="Generate" TextAlignment="Center" Height="Auto" Margin="0" Text="{Binding Source={StaticResource DictionaryInstance}, Path=[Generate].Selected}"/>
                            </Border>
                            <Grid Grid.Row="1" Name="GenerateLocation">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock Margin="0 30 10 0" Text="{Binding Path=[GenerationLocation].Selected, Source={StaticResource DictionaryInstance}, Mode=OneWay}"/>
                                <Border Grid.Column="1" Height="38" CornerRadius="10" Padding="4" Cursor="Hand" VerticalAlignment="Bottom" Margin="0 25 0 0">
                                    <Border.Background>
                                        <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                                            <GradientStop Color="#FF02709D"/>
                                            <GradientStop Color="#FF050F6C" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <ComboBox x:Name="GenerationLocation" BorderThickness="0" SelectionChanged="GenerationToWhite" SelectedIndex="{Binding Source={StaticResource GenerationInstance}, Path=Location, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}" ItemContainerStyle="{DynamicResource ComboBoxItemContainerStyle}" Template="{DynamicResource ComboBoxTemplate}"/>
                                </Border>
                                <Rectangle/>
                            </Grid>
                            <Grid Grid.Row="2" PreviewMouseDown="GenerationParamClick" Name="GenerateRarity">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="{Binding Path=[GenerationRarity].Selected, Source={StaticResource DictionaryInstance}, Mode=OneWay}"/>
                                <local:MyTextBox MinValue="1" MaxValue="50" Text="{Binding Source={StaticResource GenerationInstance}, Path=Rarity, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}" PreviewTextInput="RarityEnter" CustomMouseClick="MyTextBlock_CustomMouseClick"/>
                                <Rectangle/>
                            </Grid>
                            <Grid Grid.Row="3" PreviewMouseDown="GenerationParamClick" Name="GenerateNum">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="{Binding Path=[GenerationNumber].Selected, Source={StaticResource DictionaryInstance}, Mode=OneWay}"/>
                                <TextBox Text="{Binding Source={StaticResource GenerationInstance}, Path=Num, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}" PreviewTextInput="NumericEnterCheck"/>
                                <Rectangle/>
                            </Grid>
                            <Grid Grid.Row="4" PreviewMouseDown="GenerationParamClick" Cursor="Hand" Name="GenerateExceptions">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="{Binding Path=[GenerationExceptions].Selected, Source={StaticResource DictionaryInstance}, Mode=OneWay}"/>
                                <TextBox Text="{Binding Source={StaticResource GenerationInstance}, Path=Exceptions, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}" x:Name="GenerationExceptions" TextWrapping="Wrap" PreviewKeyDown="GenerationExceptionsKeyDown" Cursor="Hand">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Margin" Value="0 25 0 0"/>
                                            <Setter Property="Grid.ColumnSpan" Value="2"/>
                                            <Setter Property="Height" Value="Auto"/>
                                            <Setter Property="VerticalAlignment" Value="Bottom"/>
                                            <Setter Property="FontSize" Value="20"/>
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="CaretBrush" Value="White"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <EventSetter Event="LostFocus" Handler="TextBoxLostFocus"/>
                                            <EventSetter Event="TextChanged" Handler="GnerationTextToWhite"/>
                                            <Style.Triggers>
                                                <MultiTrigger>
                                                    <MultiTrigger.Conditions>
                                                        <Condition Property="IsFocused" Value="True" />
                                                        <Condition Property="Text" Value="&quot;&quot;" />
                                                        <Condition Property="IsMouseOver" Value="True"/>
                                                    </MultiTrigger.Conditions>
                                                    <Setter Property="Background" Value="LightGreen" />
                                                </MultiTrigger>
                                                <DataTrigger  Binding="{Binding Text.Length, RelativeSource={RelativeSource Self}}" Value="0">
                                                    <Setter Property="Background" Value="#7F0087FF"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                                <Rectangle/>
                            </Grid>
                        </Grid>
                    </ScrollViewer>
                </Border>
                <Grid Grid.Column="2" Background="{DynamicResource GenRes}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>
                    <Image Grid.ColumnSpan="3" Grid.RowSpan="3" Source="Source/Images/Nothing.png" Stretch="UniformToFill" x:Name="NoGenerationImage"/>
                    <ScrollViewer Grid.Row="1" Grid.Column="1" VerticalScrollBarVisibility="Hidden">
                        <StackPanel x:Name="GenerationResults">
                            <StackPanel.Resources>
                                <Style TargetType="Grid" x:Key="PlantParams">
                                    <Setter Property="Grid.Row" Value="1"/>
                                    <Setter Property="Grid.Column" Value="1"/>
                                    <Setter Property="VerticalAlignment" Value="Bottom"/>
                                </Style>
                                <Style TargetType="RowDefinition">
                                    <Setter Property="Height" Value="Auto"/>
                                </Style>
                                <Style TargetType="Border">
                                    <Setter Property="Height" Value="100"/>
                                    <Setter Property="BorderThickness" Value="4"/>
                                    <Setter Property="BorderBrush" Value="#777777"/>
                                    <Setter Property="CornerRadius" Value="5"/>
                                    <Setter Property="Margin" Value="0 0 10 0"/>
                                    <Setter Property="Grid.RowSpan" Value="2"/>
                                    <Setter Property="VerticalAlignment" Value="Top"/>
                                </Style>
                                <Style TargetType="TextBlock" x:Key="PlantName">
                                    <Setter Property="Grid.Column" Value="1"/>
                                    <Setter Property="FontSize" Value="20"/>
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                                <Style TargetType="TextBlock" x:Key="X">
                                    <Setter Property="Grid.Column" Value="1"/>
                                    <Setter Property="TextAlignment" Value="Right"/>
                                    <Setter Property="FontSize" Value="32"/>
                                </Style>
                                <Style TargetType="Rectangle">
                                    <Setter Property="Fill" Value="#777777"/>
                                    <Setter Property="Height" Value="2"/>
                                    <Setter Property="Margin" Value="0 15"/>
                                </Style>
                            </StackPanel.Resources>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Grid>
            <Grid Grid.Row="1" x:Name="PlantCreateBody" Drop="OnDrop" AllowDrop="True" DragEnter="OnDragEnter" DragOver="OnDragOver" Background="Transparent" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="0.6*"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Image Panel.ZIndex="1" Grid.RowSpan="2" Source="Source/Images/PlantGirl.png" VerticalAlignment="Bottom" x:Name="CreateImage" Width="200"/>
                    <Image Grid.Row="1" Grid.RowSpan="2" Source="Source/Images/plantPot.png" VerticalAlignment="Bottom"/>
                </Grid>
                <ScrollViewer VerticalScrollBarVisibility="Hidden" Grid.Column="1" Margin="20 0 0 0">
                    <Grid x:Name="CreateParams">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Column="0" MaxWidth="500" Margin="0 0 20 0">
                            <Grid.Resources>
                                <Style TargetType="RowDefinition">
                                    <Setter Property="Height" Value="Auto"/>
                                </Style>
                                <Style TargetType="Grid">
                                    <Setter Property="Grid.Column" Value="1"/>
                                    <Setter Property="Height" Value="Auto"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                </Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Margin" Value="0 25 10 0"/>
                                    <Setter Property="FontSize" Value="20"/>
                                    <Setter Property="VerticalAlignment" Value="Top"/>
                                </Style>
                                <Style TargetType="Rectangle">
                                    <Setter Property="Height" Value="2"/>
                                    <Setter Property="Fill" Value="#777777"/>
                                    <Setter Property="Grid.ColumnSpan" Value="2"/>
                                    <Setter Property="Grid.Row" Value="2"/>
                                    <Setter Property="Margin" Value="0 10 0 0"/>
                                </Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Margin" Value="0 25 0 0"/>
                                    <Setter Property="Grid.ColumnSpan" Value="2"/>
                                    <Setter Property="Height" Value="Auto"/>
                                    <Setter Property="VerticalAlignment" Value="Bottom"/>
                                    <Setter Property="FontSize" Value="20"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="CaretBrush" Value="White"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <EventSetter Event="LostFocus" Handler="TextBoxLostFocus"/>
                                </Style>
                                <Style TargetType="local:UndoableTextBox">
                                    <Setter Property="Margin" Value="0 25 0 0"/>
                                    <Setter Property="Grid.ColumnSpan" Value="2"/>
                                    <Setter Property="Height" Value="Auto"/>
                                    <Setter Property="VerticalAlignment" Value="Bottom"/>
                                    <Setter Property="FontSize" Value="20"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="CaretBrush" Value="White"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <EventSetter Event="LostFocus" Handler="TextBoxLostFocus"/>
                                </Style>
                            </Grid.Resources>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid x:Name="PlantName" Grid.Row="0" PreviewMouseDown="GenerationParamClick">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock FontSize="25" Text="{Binding Path=[GenerationName].Selected, Source={StaticResource DictionaryInstance}, Mode=OneWay}"/>
                                <local:UndoableTextBox FontSize="25" Text="{Binding Path=Name, Source={StaticResource PlantInstance}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                <Rectangle/>
                            </Grid>
                            <Grid x:Name="PlantLocation" Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="{Binding Path=[GenerationLocation].Selected, Source={StaticResource DictionaryInstance}, Mode=OneWay}"/>
                                <StackPanel x:Name="PlantLocations" Grid.Row="1">
                                    <StackPanel.Resources>
                                        <Style TargetType="ComboBox">
                                            <Setter Property="FontSize" Value="20"/>
                                            <!--<Setter Property="FontWeight" Value="Bold"/>-->
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                            <Setter Property="SelectedValuePath" Value="Content"/>
                                            <EventSetter Event="SelectionChanged" Handler="PlantLocationChanged"/>
                                            <EventSetter Event="PreviewMouseWheel" Handler="ProhibitMouseWheel"/>
                                            <Setter Property="ItemContainerStyle" Value="{DynamicResource ComboBoxItemContainerStyle}"/>
                                            <Setter Property="Template" Value="{DynamicResource ComboBoxTemplate}"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                                                        <GradientStop Color="#FF02709D"/>
                                                        <GradientStop Color="#FF050F6C" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </StackPanel.Resources>
                                    <Grid Grid.Row="1" Height="40" VerticalAlignment="Bottom" Margin="0 10 0 0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Border CornerRadius="10" Padding="4" Cursor="Hand">
                                            <ComboBox/>
                                        </Border>
                                        <!--<Grid Background="Transparent" Cursor="Hand" Margin="20 0 10 0" Grid.Column="1" Width="20"/>-->
                                    </Grid>
                                    <Border MouseDown="AddPlantLocation">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="CornerRadius" Value="10"/>
                                                <Setter Property="Margin" Value="0 10 0 0"/>
                                                <Setter Property="Height" Value="30"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background">
                                                            <Setter.Value>
                                                                <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                                                                    <GradientStop Color="#19B200FF"/>
                                                                    <GradientStop Color="#3300077C" Offset="1"/>
                                                                </LinearGradientBrush>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid Cursor="Hand">
                                            <Image Width="20" Height="20" Source="Source/Images/plus.png"/>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                                <Rectangle/>
                            </Grid>
                            <Grid x:Name="PlantFeatures" Grid.Row="2" PreviewMouseDown="GenerationParamClick">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
