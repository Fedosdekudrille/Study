        <ListBox x:Name="DoctorList" Grid.Column="0" ItemsSource="{Binding Source={StaticResource Model}, Path=Doctor}"
		 SelectedItem="{Binding Source={StaticResource Model}, Path=SelectedDoctor}">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<StackPanel Margin="5">
						<TextBlock FontSize="18" Text="{Binding Path=Name}" />
						<TextBlock Text="{Binding Path=Sphere}" />
						<TextBlock Text="{Binding Path=Kab}" />
						<Button Tag="{Binding Id}" Click="Button_Edit">Редактировать</Button>
						<Button Tag="{Binding Id}" Click="Button_Delete">Удалить</Button>
						<Button Tag="{Binding Id}" Click="Button_Click_4">Добавить таллон</Button>
					</StackPanel>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
		<ListBox x:Name="TalonsList" Grid.Column="1" ItemsSource="{Binding Source={StaticResource Model}, Path=Talons}"
     SelectedItem="{Binding Source={StaticResource Model}, Path=CurrentTalon}">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<StackPanel Margin="5">
						<TextBlock FontSize="18" Text="{Binding Path=ClientName}" />
						<TextBlock Text="{Binding Path=Date}" />
						<TextBlock Text="{Binding Path=Doctor.Name}" />
                        <Button Tag="{Binding Id}" Click="Button_DelOrder">Удалить таллон</Button>
					</StackPanel>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
        <StackPanel Grid.Column="3" Width="150">
            <TextBox Margin="0 0 0 10" x:Name="Search"/>
            <Button Command="{Binding Source={StaticResource Model}, Path=Search}" CommandParameter="{Binding ElementName=Search, Path=Text}">Искать</Button>
            <ListBox x:Name="SearchedItems" Grid.Column="1" ItemsSource="{Binding Source={StaticResource Model}, Path=Searched}"
     SelectedItem="{Binding Source={StaticResource Model}, Path=CurrentTalon}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5">
                            <TextBlock FontSize="18" Text="{Binding Path=Name}" />
                            <TextBlock Text="{Binding Path=Sphere}" />
                            <TextBlock Text="{Binding Path=Kab}" />
                            <Button Tag="{Binding Id}" Click="Button_Edit">Редактировать</Button>
                            <Button Tag="{Binding Id}" Click="Button_Delete">Удалить</Button>
                            <Button Tag="{Binding Id}" Click="Button_Click_4">Добавить таллон</Button>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
